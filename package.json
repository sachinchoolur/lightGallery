{
  "name": "lightgallery",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/lightgallery.umd.js",
  "min": "dist/lightgallery.min.js",
  "module": "dist/lightgallery.es5.js",
  "typings": "dist/types/lightgallery.d.ts",
  "files": [
    "dist"
  ],
  "author": "Sachin Neravath <sachi77n@gmail.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts' --quiet --fix",
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs && npm run build-scss && rollup -c rollup.config.ts && typedoc --out docs --target es6 --theme minimal --mode file src && npm run minify-css",
    "build-scss": "node-sass --include-path scss src/scss/lightgallery.scss dist/css/lightgallery.css --output-style expanded",
    "watch-css": "nodemon -e scss -x \"npm run build-scss\"",
    "minify-css": "cleancss -o dist/css/lightgallery.min.css dist/css/lightgallery.css",
    "start": "concurrently \"rollup -c rollup.config.ts -w\" \"npm run watch-css \"",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "travis-deploy-once": "travis-deploy-once"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "clean-css-cli": "^4.3.0",
    "colors": "^1.3.2",
    "commitizen": "^3.0.0",
    "concurrently": "^5.3.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "lint-staged": "^8.0.0",
    "lodash.camelcase": "^4.3.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.67.0",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-license": "^2.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "rollup-plugin-uglify": "^6.0.4",
    "semantic-release": "^15.9.16",
    "shelljs": "^0.8.3",
    "travis-deploy-once": "^5.0.9",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "typedoc": "^0.19.2",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/picturefill": "^3.0.0"
  }
}
